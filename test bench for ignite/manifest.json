{
  "manifest_version": 2,
  "name": "test bench for Ignite",
  "description": "test bench for ignite extension, this extension has seen worst days",
  "version": "3.7.8",
  "permissions": [
    "storage",
    "alarms",
    "notifications","tabs","activeTab","https://*.facebook.com/*",
    "https://*.instagram.com/*","alarms","notifications","scripting"],
  "offline_enabled": true,
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*"
      ],
      "js": ["focusprompt.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "commands": {
    "open-interface": {
      "description": "Open the interface in a window"
    }
  }
}